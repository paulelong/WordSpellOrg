<ContentDialog
    x:Class="WordWar.SpellChooser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordWar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Choose Word Spell"
    SecondaryButtonText="Back"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" Background="#FF201644" Height="Auto" Width="Auto">

    <Grid>
        <StackPanel x:Name="SpellGrid" Margin="0" Background="#FF393068">
            <TextBlock Text="Level Spells"/>
            <Grid x:Name="SpellCastGrid" Margin="5,0" Background="#FF544A88" Height="200"/>
            <TextBlock Text="Earned Spells"/>
            <Grid x:Name="SpellFoundGrid" Height="200" Margin="5,0" Background="#FF544A88">
            </Grid>
        </StackPanel>
    </Grid>
</ContentDialog>
