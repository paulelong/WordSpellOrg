<ContentDialog
    x:Class="WordWar.LoadStuff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordWar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Please wait"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" Loaded="ContentDialog_Loaded">

    <StackPanel Height="67">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,9,0,-46" TextWrapping="Wrap" Text="Loading dictionary and other stuff...
                   " VerticalAlignment="Top"/>
    </StackPanel>
</ContentDialog>
